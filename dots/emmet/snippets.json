{
	"variables": {
		"lang": "en",
		"locale": "en-US",
		"charset": "UTF-8",
		"indentation": "\t",
		"newline": "\n"
	},

	"css": {
		"filters": "html",
		"snippets": {
      "@group": "/*  ========================================================================== *\/\n/*  @group ${1} *\/\n/*  ========================================================================== */\n\n${2}",
			"@groups": "/*  @group ${1} *\/\n/*  ========================================================================== *\/\n\n${2}",
      "@groupl": "// -------------------------------------------------------- //\n// ${1}\n// -------------------------------------------------------- //"
		}
	},

  "html": {
    "filters": "html",
    "snippets": {
      "@ss": "<%-- ${1} --%>"
    }
  }
}