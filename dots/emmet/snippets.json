{
	"variables": {
		"lang": "en",
		"locale": "en-US",
		"charset": "UTF-8",
		"indentation": "\t",
		"newline": "\n"
	},

	"css": {
		"filters": "html",
		"snippets": {
      "@group": "/*  ========================================================================== *\/\n/*  @group ${1} *\/\n/*  ========================================================================== */\n\n${2}",
			"@groups": "/*  @group ${1} *\/\n/*  ========================================================================== *\/\n\n${2}",
      "@groupl": "//  -------------------------------------------------------- //\n//  ${1}\n//  -------------------------------------------------------- //",
      "@medial":  "@media only screen and ( min-width: ${1:@-site-breakpoint-medium} ) {\n\t${2}\n}",
      "@medialm": "@media only screen and ( max-width: ${1:@-site-breakpoint-medium} ) {\n\t${2}\n}",
      "@medialr": "@media only screen and ( max-width: ${1:@-site-breakpoint-medium} ) {\n\t.responsive {\n\t\t${2}\n\t}\n}"
		}
	},

  "html": {
    "filters": "html",
    "snippets": {
      "@ssc": "<%-- ${1} --%>"
    }
  }
}
